<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration
	xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="console"
		class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %c{1} - %m%n" />
		</layout>
	</appender>
	<logger name="com.pacificdataservices.diamond"                                              additivity="true"> <level value="info" /> </logger>
	<logger name="com.pacificdataservices.diamond.planning.services.PlanningDataService"        additivity="true"> <level value="info" /> </logger>
	<logger name="com.pacificdataservices.diamond.planning.services.PlanningEngine98565Tests"   additivity="true"> <level value="debug" /> </logger>
	<logger name="com.pacificdataservices.diamond.planning.EligibleSupplies"                    additivity="true"> <level value="info" /> </logger>
	<logger name="com.pacificdataservices.diamond.planning.filter.EligibleSupplyFilterImpl"     additivity="true"> <level value="info" /> </logger>
	<logger name="com.pacificdataservices.diamond.planning.PlanningData"                        additivity="true"> <level value="info" /> </logger>
	<logger name="com.pacificdataservices.diamond.planning.Allocator"                           additivity="true"> <level value="info" /> </logger>
	<logger name="com.pacificdataservices.diamond.planning.marshall.PlanningDataJsonMarshaller" additivity="true"> <level value="info" /> </logger>
	<logger name="org.javautil.hibernate.HibernateMarshallerFactory"                            additivity="true"> <level value="info" /> </logger>

	<root>
		<priority value="info" />
		<appender-ref ref="console" />
	</root>
</log4j:configuration>
